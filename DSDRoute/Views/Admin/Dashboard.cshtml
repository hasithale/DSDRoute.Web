@model DSDRoute.Models.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="fade-in-up">
    <!-- Header Section -->
    <div class="mb-4">
        <h1 class="text-gradient fw-bold mb-1">
            <i class="fas fa-tachometer-alt me-3"></i>DSD Route Admin Dashboard
        </h1>
        <p class="text-muted mb-0">Direct-to-Store Delivery Management System</p>
    </div>

    <!-- Stats Overview -->
    <div class="row mb-4">
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="modern-card" style="border-left: 4px solid #0a83a1;">
                <div class="modern-card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h3 class="fw-bold text-gradient mb-1">@Model.TotalShops</h3>
                            <p class="text-muted mb-0">Active Shops</p>
                        </div>
                        <div style="width: 50px; height: 50px; background: rgba(10, 131, 161, 0.1); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                            <i class="fas fa-store" style="color: #0a83a1; font-size: 1.5rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="modern-card" style="border-left: 4px solid #4facfe;">
                <div class="modern-card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h3 class="fw-bold mb-1" style="color: #4facfe;">@Model.TotalProducts</h3>
                            <p class="text-muted mb-0">Products</p>
                        </div>
                        <div style="width: 50px; height: 50px; background: rgba(75, 172, 254, 0.1); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                            <i class="fas fa-box" style="color: #4facfe; font-size: 1.5rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="modern-card" style="border-left: 4px solid #ffc107;">
                <div class="modern-card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h3 class="fw-bold mb-1" style="color: #ffc107;">@Model.PendingOrders</h3>
                            <p class="text-muted mb-0">Pending Orders</p>
                        </div>
                        <div style="width: 50px; height: 50px; background: rgba(255, 193, 7, 0.1); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                            <i class="fas fa-clock" style="color: #ffc107; font-size: 1.5rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="modern-card" style="border-left: 4px solid #ff6b6b;">
                <div class="modern-card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h3 class="fw-bold mb-1" style="color: #ff6b6b;">@Model.TotalSalesReps</h3>
                            <p class="text-muted mb-0">Sales Reps</p>
                        </div>
                        <div style="width: 50px; height: 50px; background: rgba(255, 107, 107, 0.1); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                            <i class="fas fa-user-tie" style="color: #ff6b6b; font-size: 1.5rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Financial Overview -->
    <div class="row mb-4">
        <div class="col-lg-4 col-md-6 mb-3">
            <div class="modern-card" style="border-left: 4px solid #28a745;">
                <div class="modern-card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h3 class="fw-bold mb-1" style="color: #28a745;">Rs. @Model.TodaysOrderValue.ToString("0.00")</h3>
                            <p class="text-muted mb-0">Today's Orders</p>
                        </div>
                        <div style="width: 50px; height: 50px; background: rgba(40, 167, 69, 0.1); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                            <i class="fas fa-dollar-sign" style="color: #28a745; font-size: 1.5rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 mb-3">
            <div class="modern-card" style="border-left: 4px solid #ffc107;">
                <div class="modern-card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h3 class="fw-bold mb-1" style="color: #ffc107;">Rs. @Model.OutstandingCredits.ToString("0.00")</h3>
                            <p class="text-muted mb-0">Outstanding Credits</p>
                        </div>
                        <div style="width: 50px; height: 50px; background: rgba(255, 193, 7, 0.1); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                            <i class="fas fa-credit-card" style="color: #ffc107; font-size: 1.5rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 mb-3">
            <div class="modern-card" style="border-left: 4px solid #17a2b8;">
                <div class="modern-card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h3 class="fw-bold mb-1" style="color: #17a2b8;">@Model.Users.Count</h3>
                            <p class="text-muted mb-0">Total Users</p>
                        </div>
                        <div style="width: 50px; height: 50px; background: rgba(23, 162, 184, 0.1); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                            <i class="fas fa-users" style="color: #17a2b8; font-size: 1.5rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

