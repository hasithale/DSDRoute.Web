@model DSDRoute.Models.Product
@{
    ViewData["Title"] = "Product Details";
}

<div class="fade-in-up">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="text-gradient fw-bold mb-1">
                <i class="fas fa-box me-3"></i>@Model.Name
            </h1>
            <p class="text-muted mb-0">Product details and inventory information</p>
        </div>
        <div class="d-flex gap-2">
            <a class="modern-btn modern-btn-outline" asp-action="Index">
                <i class="fas fa-arrow-left me-2"></i>Back to Products
            </a>
            <a class="modern-btn modern-btn-primary" asp-action="Edit" asp-route-id="@Model.Id">
                <i class="fas fa-edit me-2"></i>Edit Product
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Product Information -->
        <div class="col-lg-8 mb-4">
            <div class="modern-card">
                <div class="modern-card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>Product Information
                    </h5>
                </div>
                <div class="modern-card-body">
                    <div class="row">
                        <div class="col-md-8 mb-3">
                            <label class="modern-form-label text-muted">Product Name</label>
                            <div class="fw-semibold fs-5">@Model.Name</div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="modern-form-label text-muted">SKU</label>
                            <div class="fw-semibold fs-5">
                                <span class="badge bg-dark px-3 py-2 rounded-pill">@Model.SKU</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="modern-form-label text-muted">Unit Price</label>
                            <div class="fw-semibold fs-4 text-success">
                                <i class="fas fa-dollar-sign me-1"></i>@Model.Price.ToString("F2")
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="modern-form-label text-muted">Stock Quantity</label>
                            <div class="fw-semibold fs-4">
                                @if (Model.StockQty > 10)
                                {
                                    <span class="text-success">@Model.StockQty units</span>
                                }
                                else if (Model.StockQty > 0)
                                {
                                    <span class="text-warning">@Model.StockQty units</span>
                                }
                                else
                                {
                                    <span class="text-danger">Out of Stock</span>
                                }
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="modern-form-label text-muted">Category</label>
                            <div class="fw-semibold fs-5">
                                @if (!string.IsNullOrEmpty(Model.Category))
                                {
                                    <span class="badge bg-info px-3 py-2 rounded-pill">
                                        <i class="fas fa-tag me-1"></i>@Model.Category
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">Not categorized</span>
                                }
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="mb-3">
                            <label class="modern-form-label text-muted">Description</label>
                            <div class="fw-normal fs-6">@Model.Description</div>
                        </div>
                    }

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="modern-form-label text-muted">Status</label>
                            <div class="fw-semibold fs-5">
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-success px-3 py-2 rounded-pill">
                                        <i class="fas fa-check-circle me-1"></i>Active
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-danger px-3 py-2 rounded-pill">
                                        <i class="fas fa-times-circle me-1"></i>Inactive
                                    </span>
                                }
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="modern-form-label text-muted">Created Date</label>
                            <div class="fw-semibold fs-5">
                                <i class="fas fa-calendar me-2 text-info"></i>@Model.CreatedDate.ToString("MMM dd, yyyy")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Stats & Actions -->
        <div class="col-lg-4 mb-4">
            <!-- Stock Alert -->
            @if (Model.StockQty <= 10)
            {
                <div class="alert alert-warning mb-4">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-exclamation-triangle me-3 fs-4"></i>
                        <div>
                            <div class="fw-bold">Low Stock Alert</div>
                            <small>Only @Model.StockQty units remaining</small>
                        </div>
                    </div>
                </div>
            }

            <!-- Quick Stats -->
            <div class="modern-card mb-4">
                <div class="modern-card-body">
                    <h6 class="fw-bold mb-3">
                        <i class="fas fa-chart-bar me-2"></i>Product Statistics
                    </h6>
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <span class="text-muted">Times Ordered</span>
                        <span class="fw-bold text-primary">@Model.OrderItems.Sum(oi => oi.Quantity)</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <span class="text-muted">Total Revenue</span>
                        <span class="fw-bold text-success">Rs. @(Model.OrderItems.Sum(oi => oi.Quantity * oi.Price).ToString("0.00"))</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="text-muted">Returns</span>
                        <span class="fw-bold text-danger">@Model.Returns.Sum(r => r.Quantity)</span>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="modern-card">
                <div class="modern-card-body">
                    <h6 class="fw-bold mb-3">
                        <i class="fas fa-bolt me-2"></i>Quick Actions
                    </h6>
                    <div class="d-grid gap-2">
                        <button class="modern-btn modern-btn-primary" data-bs-toggle="modal" data-bs-target="#stockModal">
                            <i class="fas fa-boxes me-2"></i>Update Stock
                        </button>
                        <a class="modern-btn modern-btn-info" asp-controller="Order" asp-action="Index" asp-route-productId="@Model.Id">
                            <i class="fas fa-list me-2"></i>View Orders
                        </a>
                        @if (!Model.IsActive)
                        {
                            <form asp-action="Activate" asp-route-id="@Model.Id" method="post" class="d-inline">
                                <button type="submit" class="modern-btn modern-btn-success w-100" onclick="return confirm('Activate this product?');">
                                    <i class="fas fa-play me-2"></i>Activate Product
                                </button>
                            </form>
                        }
                        else
                        {
                            <form asp-action="Deactivate" asp-route-id="@Model.Id" method="post" class="d-inline">
                                <button type="submit" class="modern-btn modern-btn-outline w-100" onclick="return confirm('Deactivate this product?');">
                                    <i class="fas fa-pause me-2"></i>Deactivate Product
                                </button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Orders Section -->
    @if (Model.OrderItems.Any())
    {
        <div class="modern-card">
            <div class="modern-card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-shopping-cart me-2"></i>Recent Orders
                    </h5>
                    <a class="modern-btn modern-btn-outline btn-sm" asp-controller="Order" asp-action="Index" asp-route-productId="@Model.Id">
                        View All Orders
                    </a>
                </div>
            </div>
            <div class="modern-card-body p-0">
                <div class="table-responsive">
                    <table class="modern-table table-hover w-100">
                        <thead>
                            <tr>
                                <th style="padding: 1rem;">Order #</th>
                                <th style="padding: 1rem;">Shop</th>
                                <th style="padding: 1rem;">Quantity</th>
                                <th style="padding: 1rem;">Unit Price</th>
                                <th style="padding: 1rem;">Total</th>
                                <th style="padding: 1rem;">Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderItems.OrderByDescending(oi => oi.Order.OrderDate).Take(5))
                            {
                                <tr>
                                    <td style="padding: 1rem;">
                                        <a href="/Order/Details/@item.OrderId" class="text-decoration-none">
                                            <span class="fw-semibold text-primary">#@item.OrderId</span>
                                        </a>
                                    </td>
                                    <td style="padding: 1rem;">
                                        @item.Order.Shop.Name
                                    </td>
                                    <td style="padding: 1rem;">
                                        <span class="fw-semibold">@item.Quantity</span>
                                    </td>
                                    <td style="padding: 1rem;">
                                        Rs. @item.Price.ToString("0.00")
                                    </td>
                                    <td style="padding: 1rem;">
                                        <span class="fw-semibold text-success">Rs. @((item.Quantity * item.Price).ToString("0.00"))</span>
                                    </td>
                                    <td style="padding: 1rem;">
                                        @item.Order.OrderDate.ToString("MMM dd, yyyy")
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

<!-- Stock Update Modal -->
<div class="modal fade" id="stockModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="UpdateStock" method="post">
                <input type="hidden" name="id" value="@Model.Id" />
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fas fa-boxes me-2"></i>Update Stock Quantity
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="modern-form-label">Current Stock</label>
                        <div class="fw-bold fs-4">@Model.StockQty units</div>
                    </div>
                    <div class="mb-3">
                        <label for="newStock" class="modern-form-label">New Stock Quantity</label>
                        <input type="number" id="newStock" name="newStock" class="form-control modern-form-control" 
                               value="@Model.StockQty" min="0" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="modern-btn modern-btn-outline" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="modern-btn modern-btn-primary">Update Stock</button>
                </div>
            </form>
        </div>
    </div>
</div>