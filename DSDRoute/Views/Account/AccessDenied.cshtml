@{
    ViewData["Title"] = "Access Denied";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="fas fa-lock text-warning" style="font-size: 4rem;"></i>
                    </div>
                    <h2 class="card-title mb-3">Access Denied</h2>
                    <p class="card-text text-muted mb-4">
                        You don't have permission to access this resource. If you believe this is an error, 
                        please contact your administrator.
                    </p>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        <a href="javascript:history.back()" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Go Back
                        </a>
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-primary">
                                <i class="fas fa-home me-2"></i>Dashboard
                            </a>
                        }
                        else
                        {
                            <a asp-controller="Home" asp-action="Dashboard" class="btn btn-primary">
                                <i class="fas fa-home me-2"></i>Dashboard
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
