@model DSDRoute.Models.UserManagementViewModel
@{
    ViewData["Title"] = "User Management";
}

<div class="fade-in-up">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="text-gradient fw-bold mb-1">
                <i class="fas fa-users-cog me-3"></i>User Management
            </h1>
            <p class="text-muted mb-0">Manage user accounts and permissions</p>
        </div>
        <a class="modern-btn modern-btn-success" asp-action="Create">
            <i class="fas fa-user-plus me-2"></i>Create User
        </a>
    </div>

    <!-- User Management Table -->
    <div class="modern-card">
        <div class="modern-card-header">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fas fa-users me-2"></i>All Users
                </h5>
                <div class="input-group" style="width: 300px;">
                    <input type="text" class="form-control modern-form-control" placeholder="Search users..." id="userSearch">
                    <button class="modern-btn modern-btn-outline" type="button">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
        </div>
        <div class="modern-card-body p-0">
            @if (Model.Users.Any())
            {
                <div class="table-responsive">
                    <table class="modern-table table-hover w-100">
                        <thead>
                            <tr>
                                <th style="padding: 1.5rem 1rem;">User</th>
                                <th style="padding: 1.5rem 1rem;">Status</th>
                                <th style="padding: 1.5rem 1rem;">Role</th>
                                <th style="padding: 1.5rem 1rem;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model.Users)
                            {
                                <tr>
                                    <td style="padding: 1rem;">
                                        <div class="d-flex align-items-center">
                                            <div class="user-avatar me-3" style="width: 40px; height: 40px; background: #0a83a1; color: white; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: 600;">
                                                @user.Email!.Substring(0, 1).ToUpper()
                                            </div>
                                            <div>
                                                <div class="fw-semibold">@user.Email</div>
                                                <small class="text-muted">ID: @user.Id.Substring(0, 8)...</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td style="padding: 1rem;">
                                        @if (user.IsActive)
                                        {
                                            <span class="badge bg-success px-3 py-2 rounded-pill">
                                                <i class="fas fa-check-circle me-1"></i>Active
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger px-3 py-2 rounded-pill">
                                                <i class="fas fa-times-circle me-1"></i>Inactive
                                            </span>
                                        }
                                    </td>
                                    <td style="padding: 1rem;">
                                        <span class="badge px-3 py-2 rounded-pill" style="background: #0a83a1; color: white;">
                                            <i class="fas fa-user-tag me-1"></i>
                                            @(user.Email!.Contains("admin") ? "Admin" : "User")
                                        </span>
                                    </td>
                                    <td style="padding: 1rem;">
                                        <div class="btn-group" role="group">
                                            <a class="modern-btn modern-btn-primary btn-sm" asp-action="Edit" asp-route-id="@user.Id" title="Edit User">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a class="modern-btn modern-btn-outline btn-sm" asp-action="ResetPassword" asp-route-id="@user.Id" title="Reset Password">
                                                <i class="fas fa-key"></i>
                                            </a>
                                            @if (user.IsActive && user.Email != "admin@dsdroute.com")
                                            {
                                                <form asp-action="Deactivate" asp-route-id="@user.Id" method="post" style="display:inline;" 
                                                      onsubmit="return confirm('Are you sure you want to deactivate this user?');">
                                                    <button type="submit" class="modern-btn btn-sm" style="background: #dc3545; color: white;" title="Deactivate User">
                                                        <i class="fas fa-ban"></i>
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <div style="width: 80px; height: 80px; background: #f8fafc; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1.5rem;">
                        <i class="fas fa-users" style="font-size: 2rem; color: #cbd5e1;"></i>
                    </div>
                    <h4 class="text-muted mb-2">No Users Found</h4>
                    <p class="text-muted">Start by creating your first user account.</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Simple search functionality
        document.getElementById('userSearch').addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            const rows = document.querySelectorAll('tbody tr');
            
            rows.forEach(row => {
                const email = row.querySelector('td .fw-semibold').textContent.toLowerCase();
                if (email.includes(searchTerm)) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        });
    </script>
}