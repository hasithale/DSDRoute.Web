@model DSDRoute.Models.ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
}

<div class="fade-in-up">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="text-gradient fw-bold mb-1">
                <i class="fas fa-key me-3"></i>Reset Password
            </h1>
            <p class="text-muted mb-0">Set a new password for @Model.Email</p>
        </div>
        <a class="modern-btn modern-btn-outline" asp-action="Index">
            <i class="fas fa-arrow-left me-2"></i>Back to Users
        </a>
    </div>

    <!-- Form -->
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="modern-card">
                <div class="modern-card-header">
                    <i class="fas fa-shield-alt me-2"></i>Password Reset
                </div>
                <div class="modern-card-body">
                    <form asp-action="ResetPassword" method="post">
                        <input asp-for="Id" type="hidden" />
                        <input asp-for="Email" type="hidden" />
                        
                        <div class="mb-4">
                            <div class="d-flex align-items-center p-3 rounded" style="background: rgba(10, 131, 161, 0.1); border: 2px solid #0a83a1;">
                                <div class="me-3">
                                    <div style="width: 50px; height: 50px; background: #0a83a1; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                                        <i class="fas fa-user text-white"></i>
                                    </div>
                                </div>
                                <div>
                                    <h6 class="mb-1 fw-bold">@Model.Email</h6>
                                    <p class="text-muted small mb-0">Resetting password for this user</p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mb-4">
                            <label asp-for="NewPassword" class="modern-form-label">
                                <i class="fas fa-lock me-2"></i>New Password
                            </label>
                            <div class="position-relative">
                                <input asp-for="NewPassword" class="modern-form-control" placeholder="Enter a secure password" />
                                <button type="button" class="btn btn-link position-absolute end-0 top-50 translate-middle-y me-2" onclick="togglePassword()">
                                    <i class="fas fa-eye" id="toggleIcon"></i>
                                </button>
                            </div>
                            <div class="form-text mt-2">
                                <i class="fas fa-info-circle me-1"></i>
                                Password must be at least 6 characters with uppercase, lowercase, and digit.
                            </div>
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a class="modern-btn modern-btn-outline me-md-2" asp-action="Index">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                            <button type="submit" class="modern-btn modern-btn-success" onclick="return confirm('Are you sure you want to reset this user\'s password?')">
                                <i class="fas fa-key me-2"></i>Reset Password
                            </button>
                        </div>
                        
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="modern-alert alert-danger mt-4">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                @Html.ValidationSummary(false, "", new { @class = "mb-0" })
                            </div>
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>
        function togglePassword() {
            const passwordInput = document.querySelector('input[name="NewPassword"]');
            const toggleIcon = document.getElementById('toggleIcon');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.className = 'fas fa-eye-slash';
            } else {
                passwordInput.type = 'password';
                toggleIcon.className = 'fas fa-eye';
            }
        }
    </script>
}